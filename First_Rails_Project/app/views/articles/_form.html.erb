<%= form_with model:@article do |form|%>

<div class="d-flex flex-column form-group mb-3">
    <%= form.label:title, class: "fs-3" %>
    <%= form.text_field:title, class: "form-control" %>

    <% @article.errors.full_messages_for(:title).each do |message| %>
        <div> <%= message %> </div>
    <% end %>

</div>

<div class="d-flex flex-column form-group mb-3">
    <%= form.label:body, class: "fs-3" %>
    <%= form.text_field:body, class: "form-control" %>

    <% @article.errors.full_messages_for(:body).each do |message| %>
        <div> <%= message %> </div>
    <% end %>
</div>

<div class="d-flex flex-row justify-content-center align-items-center form-group mb-3 gap-3">
    <%= form.submit class: "btn btn-outline-primary" %>
    <a class="btn btn-outline-secondary" href="http://localhost:3000/articles">Back to articles set</a>
</div>

<% end %>