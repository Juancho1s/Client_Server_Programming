<%= form_with model: @articles do |form| %>

<div>
    <%= form.label :title%>
    <%= form.text_field :title%>

    <%@articles.errors.full_messages_for(:title).each do |message|%>
    <div>
        <%= message %>
    </div>
    <%end%>

</div>



<div>
    <%= form.label :body%>
    <%= form.text_field :body%>

    <% @articles.errors.full_messages_for(:body).each do |message| %>
    <div>
        <%= message %>
    </div>
    <% end %>

</div>

<div>
    <%= form.submit%>
</div>

<% end %>