{{> pageTop }}

<div class="main">

  <div class="container">

    <div class="portfolio-title">
      <div class="row">
        <div class="portfolio-nav-all col-md-1">
          <a
            href="/portfolio2col/{{user_id}}"
            data-tooltip
            data-original-title="Back to list"
          ><i class="fa fa-th"></i></a>
        </div>
        <div class="col-md-10 center">
          <h2 class="shorter">{{project.title}}</h2>
        </div>
        <div>
          <a href=""></a>
        </div>
      </div>
    </div>

    <hr class="tall" />

    <div class="row">
      <div class="col-md-4">

        <div class="owl-carousel" data-plugin-options='{"items": 1}'>
          <div>
            <div class="thumbnail">
              <img
                alt=""
                class="img-responsive"
                src="{{project.cover}}"
              />
            </div>
          </div>

          {{#if images}}

          {{#each images}}

          <div>
            <div class="thumbnail">
              <img
                alt=""
                class="img-responsive"
                src="{{this.image}}"
              />
            </div>
          </div>

          {{/each}}

          {{/if}}

        </div>

      </div>

      <div class="col-md-8">

        <div class="portfolio-info">
          <div class="row">
            <div class="col-md-12 center">
              <ul>
                <li>
                  <i class="fa fa-calendar"></i>
                  {{project.date}}
                </li>
                <li>
                  <a href="/addProject/{{user_id}}/{{project.id}}">Update project</a>
                </li>
                <li>
                  <form action="/deleteProject/{{user_id}}/{{project.id}}" method="post">
                    <input type="submit" value="Delete Project"></input>
                  </form>
                </li>
              </ul>
            </div>
          </div>
        </div>

        <h4>Project <strong>Description</strong></h4>
        <p class="taller">{{project.description}}</p>

        <a href="" class="btn btn-primary btn-icon"><i
            class="fa fa-external-link"
          ></i>Live Preview</a>
        <span
          class="arrow hlb"
          data-appear-animation="rotateInUpLeft"
          data-appear-animation-delay="800"
        ></span>

        <ul class="portfolio-details">
          <li>
            <p><strong>Skills:</strong></p>

            <ul class="list list-skills icons list-unstyled list-inline">
              
              {{#each project.technologies}}
              
              <li><i class="fa fa-check-circle"></i> {{this}}</li>
              
              {{/each}}

            </ul>
          </li>
          <li>
            <p><strong>Client:</strong></p>

            <p>{{project.client}}</p>

          </li>
        </ul>

      </div>
    </div>

    <hr class="tall" />

    <div class="row">

      <div class="col-md-12">
        <h3>Related <strong>Projects</strong></h3>
      </div>

      {{#if similar}}

      {{#each similar}}

      <ul class="portfolio-list">
        <li class="col-md-3 col-xs-6">
          <div class="portfolio-item thumbnail">
            <a href="/singleProject/{{user_id}}/{{this.id}}" class="thumb-info">
              <img
                alt="This is the cover of thip project"
                class="img-responsive"
                src="{{this.cover}}"
              />
              <span class="thumb-info-title">
                <span class="thumb-info-inner">{{this.title}}</span>
                <span class="thumb-info-type">{{this.type}}</span>
              </span>
              <span class="thumb-info-action">
                <span title="Universal" class="thumb-info-action-icon"><i
                    class="fa fa-link"
                  ></i></span>
              </span>
            </a>
          </div>
        </li>
      </ul>
      {{/each}}

      {{else}}

      <h2>There is no any similar project</h2>

      {{/if}}

    </div>

  </div>
</div>